# Local defaults for docker-compose and the Spring Boot app.
# Override with prod values when deploying.

# Postgres
POSTGRES_DB=standarddb
POSTGRES_USER=standard
POSTGRES_PASSWORD=standard
POSTGRES_PORT=5432

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@local.dev
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# Elasticsearch / Logstash / Kibana
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ELASTICSEARCH_PORT=9200
ES_DISCOVERY_TYPE=single-node
ES_XPACK_SECURITY_ENABLED=false
ES_XPACK_ENROLLMENT_ENABLED=false
ES_JAVA_OPTS=-Xms512m -Xmx512m

LOGSTASH_PORT=5000
LOGSTASH_MONITORING_PORT=9600
LS_JAVA_OPTS=-Xms256m -Xmx256m

KIBANA_PORT=5601

# Application (Spring Boot)
SPRING_PROFILES_ACTIVE=local
APP_ENV=local
LOGSTASH_HOST=localhost

CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/standarddb
SPRING_DATASOURCE_USERNAME=standard
SPRING_DATASOURCE_PASSWORD=standard

SECURITY_JWT_ISSUER=standard-be
SECURITY_JWT_ACCESS_TOKEN_TTL_SECONDS=900
SECURITY_JWT_HMAC_SECRET=CHANGE_ME_TO_32+_CHARS_MINIMUM________
SECURITY_REFRESH_TOKEN_TTL_DAYS=60
SECURITY_REFRESH_TOKEN_TTL_SECONDS=5184000
SECURITY_REFRESH_TOKEN_HASH_PEPPER=CHANGE_ME_SERVER_PEPPER
SECURITY_ADMIN_PASSCODE=admin123
SECURITY_ADMIN_EMAIL=admin@example.com
