<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <springProperty scope="context" name="logstashHost" source="logging.logstash.host" defaultValue="localhost" />
    <springProperty scope="context" name="logstashPort" source="logging.logstash.port" defaultValue="5000" />
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="standard-container" />
    <springProperty scope="context" name="appEnv" source="app.environment" defaultValue="local" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <springProfile name="local,dev,prod">
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${logstashHost}:${logstashPort}</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"app":"${appName}","env":"${appEnv}"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="LOGSTASH" />
        </root>
    </springProfile>
</configuration>
